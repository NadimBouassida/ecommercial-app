<link rel="stylesheet" href="/css/navbar.css" />
<link rel="stylesheet" href="/css/search-bar.css" />
<!-- Navigation bar with custom styling and full width -->
<nav class="navbar navbar-expand-md custom-navbar w-100 fixed-top">
  <!-- Brand logo with a link to the homepage -->
  <a class="navbar-brand" href="/">AFFAR</a>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <!-- Left-aligned navigation links -->
    <ul class="navbar-nav mr-auto navbar-left">
      <!-- Home link -->
      <li class="nav-item">
        <a class="nav-link" href="/">Home</a>
      </li>
      <!-- Services link -->
      <li class="nav-item">
        <a class="nav-link" href="/services">Services</a>
      </li>
      <!-- Contact link -->
      <li class="nav-item">
        <a class="nav-link" href="/contact">Contact</a>
      </li>
      <!-- About link -->
      <li class="nav-item">
        <a class="nav-link" href="/about">About</a>
      </li>
    </ul>
    <!-- Search bar container -->
    <div class="search-bar">
      <input
        id="search-input"
        type="search"
        id="searchField"
        placeholder="Search for products..."
      />
      <button id="search-button" type="submit" id="searchButton">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </div>
    <!-- Right-aligned navigation options -->
    <ul class="navbar-nav navbar-right">
      <!-- Check if the user is logged in -->
      <% if (user) { %>
      <!-- User dropdown with a gradient background -->
      <div
        class="btn-group nav-item"
        style="background: linear-gradient(#ff7f07, #e4cd00)"
      >
        <!-- User icon and name display -->
        <button type="button" class="btn">
          <i class="fa-solid fa-user"></i>
          <span><%= user.name %></span>
        </button>
        <!-- Dropdown toggle button -->
        <button
          type="button"
          class="btn dropdown-toggle dropdown-toggle-split"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          <span class="visually-hidden">Toggle Dropdown</span>
        </button>
        <!-- Dropdown menu with logout option -->
        <ul class="dropdown-menu">
          <li>
            <a class="dropdown-item" href="/users/logout">Logout</a>
          </li>
        </ul>
      </div>
      <% } else { %>
      <!-- Login and Register links for guests -->
      <li class="nav-item d-flex flex-row">
        <a class="nav-link" id="login-link"  href="/users/login">Login</a>
      </li>
      <% } %>
      <!-- Shopping cart link with item count badge -->
      <li class="nav-item">
        <div class="d-flex flex-col">
          <a class="nav-link" href="/cart" style="max-height: 30px">
            <i class="fa-solid fa-shopping-cart"></i>
            <span class="badge rounded-pill bg-danger"> 0 </span>
          </a>
        </div>
      </li>
    </ul>
  </div>
  <button
    class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent"
    aria-expanded="false"
    aria-label="Toggle navigation"
  >
    <span class="navbar-toggler-icon"></span>
  </button>
  <script src="/scripts/navbarCollapse.js"></script>
  <script src="/scripts/moveSearchBar.js"></script>
</nav>
